<Window x:Class="WPFBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBasics"
        mc:Ignorable="d"
        Title="Simple User Name and Profile App" Height="480" Width="600">
    <StackPanel>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="txtAppTitle" Grid.ColumnSpan="2" Background="#FF23219D" IsEnabled="False" Foreground="White" FontSize="24" VerticalAlignment="Center" Width="580" HorizontalAlignment="Center" TextAlignment="Center">Simple User Name and Profile App</TextBlock>
            <StackPanel Grid.Row="1">
                <Label x:Name="txtNamesLabel" Grid.Row="1">Names</Label>
                <ListBox Grid.Row="1" x:Name="lstNames" KeyDown="lstNames_KeyDown" Height="250" MouseDoubleClick="lstNames_MouseDoubleClick"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
                <Label>Enter user's name:</Label>
                <TextBox x:Name="txtName" KeyDown="txtName_KeyDown"/>
                <Label>Enter user's description:</Label>
                <TextBox x:Name="txtBoxProfile" Margin="0,5,0,0" Height="50" KeyDown="txtBoxProfile_KeyDown"/>
                <Button x:Name="btnAdd" Margin="0,5,0,0" Click="ButtonAddName_Click">+ Add Name</Button>
                <Button x:Name="btnRemove" Margin="0,5,0,0" Click="ButtonRemoveName_Click">- Remove Name</Button>
                <Button x:Name="btnGetDetails" Margin="0,5,0,0" Click="ButtonGetDetails_Click">? Get user details</Button>
                <Button x:Name="btnDevCreds" Margin="0,5,0,0" Click="ButtonDevCreds_Click">> View developer credits</Button>
            </StackPanel>
        </Grid>
        <Grid Margin="10, 0, 10, 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="1" x:Name="txtProfileBorder" BorderBrush="Gray" BorderThickness="0.5,0.5,0.5,0.5">
                <TextBlock Height="80" x:Name="txtProfile"/>
            </Border>
            <Label Grid.Row="0" x:Name="txtProfileLabel">User Profile</Label>
        </Grid>
    </StackPanel>
</Window>
